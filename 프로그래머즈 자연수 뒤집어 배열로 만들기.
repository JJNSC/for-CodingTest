class Solution {
    public int[] solution(long n) {
        int size = String.valueOf(n).length(); //n의 길이를 구한다.
        int[] answer =new int[size];  //n의 길이만큼의 저장공간을 가진 배열을 설정
         for(int i=0;n!=0;i++){
            answer[i]=(int)(n%10); 
            n/=10;
        }
        return answer;
    }
}
